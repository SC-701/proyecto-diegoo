@page "{id:guid?}"
@model Web.Pages.Movimiento.EditarModel
@{
    ViewData["Title"] = "Editar Movimiento";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i>
                        Editar Movimiento
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="fas fa-check-circle"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <h6><i class="fas fa-exclamation-triangle"></i> Por favor corrija los siguientes errores:</h6>
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form method="post" id="movimientoForm">
                        <input type="hidden" asp-for="movimiento.idMovimiento" />

                        <div class="row">
                            <div class="col-md-12">
                                <h5 class="text-warning mb-3">
                                    <i class="fas fa-info-circle"></i>
                                    Información del Movimiento
                                </h5>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="cuentaSeleccionada" class="form-label">
                                    <i class="fas fa-wallet"></i>
                                    Cuenta *
                                </label>
                                <select asp-for="cuentaSeleccionada" asp-items="Model.cuentas" class="form-select">
                                    <option value="">-- Seleccione una cuenta --</option>
                                </select>
                                <span asp-validation-for="cuentaSeleccionada" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="categoriaSeleccionada" class="form-label">
                                    <i class="fas fa-tags"></i>
                                    Categoría *
                                </label>
                                <select asp-for="categoriaSeleccionada" asp-items="Model.categorias" class="form-select">
                                    <option value="">-- Seleccione una categoría --</option>
                                </select>
                                <span asp-validation-for="categoriaSeleccionada" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="tipoPagoSeleccionado" class="form-label">
                                    <i class="fas fa-credit-card"></i>
                                    Tipo de Pago *
                                </label>
                                <select asp-for="tipoPagoSeleccionado" asp-items="Model.tiposPago" class="form-select">
                                    <option value="">-- Seleccione tipo de pago --</option>
                                </select>
                                <span asp-validation-for="tipoPagoSeleccionado" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="movimiento.Fecha" class="form-label">
                                    <i class="fas fa-calendar"></i>
                                    Fecha *
                                </label>
                                <input asp-for="movimiento.Fecha" type="datetime-local" class="form-control" />
                                <span asp-validation-for="movimiento.Fecha" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="movimiento.Descripcion" class="form-label">
                                    <i class="fas fa-edit"></i>
                                    Descripción *
                                </label>
                                <textarea asp-for="movimiento.Descripcion" class="form-control" rows="3"
                                          placeholder="Ingrese una descripción detallada del movimiento"
                                          maxlength="500"></textarea>
                                <span asp-validation-for="movimiento.Descripcion" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="movimiento.MontoOriginal" class="form-label">
                                    <i class="fas fa-money-bill"></i>
                                    Monto *
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">₡</span>
                                    <input asp-for="movimiento.MontoOriginal" type="number" class="form-control"
                                           placeholder="0.00" min="0" step="0.01" />
                                </div>
                                <span asp-validation-for="movimiento.MontoOriginal" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="fas fa-toggle-on"></i>
                                    Estado
                                </label>
                                <div class="form-check form-switch">
                                    <input asp-for="movimiento.Estado" class="form-check-input" type="checkbox" />
                                    <label asp-for="movimiento.Estado" class="form-check-label">
                                        Movimiento activo
                                    </label>
                                </div>
                                <small class="form-text text-muted">
                                    Los movimientos inactivos no se consideran en los cálculos
                                </small>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <hr>
                                <div class="d-flex justify-content-between">
                                    @if (Model.movimiento != null)
                                    {
                                        <a href="/Movimiento/Index/@Model.movimiento.IdCuenta" class="btn btn-secondary">
                                            <i class="fas fa-arrow-left"></i>
                                            Volver a Movimientos
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="/Cuentas/Index" class="btn btn-secondary">
                                            <i class="fas fa-arrow-left"></i>
                                            Volver a Cuentas
                                        </a>
                                    }
                                    <button type="submit" class="btn btn-warning">
                                        <i class="fas fa-save"></i>
                                        Actualizar Movimiento
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('movimientoForm').addEventListener('submit', function(e) {
                const requiredFields = [
                    { name: 'cuentaSeleccionada', label: 'Cuenta' },
                    { name: 'categoriaSeleccionada', label: 'Categoría' },
                    { name: 'tipoPagoSeleccionado', label: 'Tipo de Pago' },
                    { name: 'movimiento.Descripcion', label: 'Descripción' },
                    { name: 'movimiento.MontoOriginal', label: 'Monto' }
                ];

                let isValid = true;
                let errors = [];

                requiredFields.forEach(field => {
                    const input = document.querySelector(`[name="${field.name}"]`);
                    if (!input || !input.value.trim()) {
                        isValid = false;
                        errors.push(field.label);
                        if (input) {
                            input.classList.add('is-invalid');
                        }
                    } else {
                        if (input) {
                            input.classList.remove('is-invalid');
                        }
                    }
                });

                const montoInput = document.querySelector('[name="movimiento.MontoOriginal"]');
                if (montoInput && parseFloat(montoInput.value) <= 0) {
                    isValid = false;
                    errors.push('Monto debe ser mayor a 0');
                    montoInput.classList.add('is-invalid');
                }

                if (!isValid) {
                    e.preventDefault();
                    alert('Por favor complete los siguientes campos:\n• ' + errors.join('\n• '));
                }
            });

            document.querySelectorAll('input, select, textarea').forEach(input => {
                input.addEventListener('input', function() {
                    this.classList.remove('is-invalid');
                });
            });

            const fechaInput = document.querySelector('[name="movimiento.Fecha"]');
            if (fechaInput && fechaInput.value) {
                const fecha = new Date(fechaInput.value);
                const fechaLocal = new Date(fecha.getTime() - fecha.getTimezoneOffset() * 60000);
                fechaInput.value = fechaLocal.toISOString().slice(0, 16);
            }
        });
    </script>

    <style>
        .card-header {
            border-bottom: 1px solid rgba(0,0,0,.125);
        }

        .form-label {
            font-weight: 600;
        }

        .form-control:focus, .form-select:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
        }

        .is-invalid {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
        }

        .btn {
            padding: 0.5rem 1.5rem;
        }

        .alert {
            border-radius: 0.375rem;
        }

        .form-check-input:checked {
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .text-warning {
            color: #ffc107 !important;
        }

        .bg-warning {
            background-color: #ffc107 !important;
        }
    </style>
}