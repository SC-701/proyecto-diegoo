@page
@model Web.Pages.Movimiento.AgregarModel
@{
    ViewData["Title"] = "Agregar Movimiento";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle"></i>
                        Agregar Nuevo Movimiento
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="fas fa-check-circle"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <h6><i class="fas fa-exclamation-triangle"></i> Por favor corrija los siguientes errores:</h6>
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form method="post" id="movimientoForm">
                        <div class="row">
                            <!-- Cuenta -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Movimiento.IdCuenta" class="form-label">
                                    <i class="fas fa-wallet"></i>
                                    Cuenta *
                                </label>
                                <select asp-for="Movimiento.IdCuenta" asp-items="Model.Cuentas" class="form-select">
                                    <option value="">-- Seleccione una cuenta --</option>
                                </select>
                                <span asp-validation-for="Movimiento.IdCuenta" class="text-danger"></span>
                            </div>

                            <!-- Categoría -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Movimiento.IdCategoria" class="form-label">
                                    <i class="fas fa-tags"></i>
                                    Categoría *
                                </label>
                                <select asp-for="Movimiento.IdCategoria" asp-items="Model.Categorias" class="form-select">
                                    <option value="">-- Seleccione una categoría --</option>
                                </select>
                                <span asp-validation-for="Movimiento.IdCategoria" class="text-danger"></span>
                            </div>

                            <!-- Tipo de Pago -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Movimiento.IdTipoPago" class="form-label">
                                    <i class="fas fa-credit-card"></i>
                                    Tipo de Pago *
                                </label>
                                <select asp-for="Movimiento.IdTipoPago" asp-items="Model.TiposPago" class="form-select">
                                    <option value="">-- Seleccione tipo de pago --</option>
                                </select>
                                <span asp-validation-for="Movimiento.IdTipoPago" class="text-danger"></span>
                            </div>

                            <!-- Fecha -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Movimiento.Fecha" class="form-label">
                                    <i class="fas fa-calendar"></i>
                                    Fecha *
                                </label>
                                <input asp-for="Movimiento.Fecha" type="datetime-local" class="form-control" />
                                <span asp-validation-for="Movimiento.Fecha" class="text-danger"></span>
                            </div>

                            <!-- Descripción -->
                            <div class="col-md-12 mb-3">
                                <label asp-for="Movimiento.Descripcion" class="form-label">
                                    <i class="fas fa-edit"></i>
                                    Descripción *
                                </label>
                                <textarea asp-for="Movimiento.Descripcion" class="form-control" rows="3"
                                          placeholder="Ingrese una descripción detallada del movimiento"></textarea>
                                <span asp-validation-for="Movimiento.Descripcion" class="text-danger"></span>
                            </div>

                            <!-- Monto Original -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Movimiento.MontoOriginal" class="form-label">
                                    <i class="fas fa-money-bill"></i>
                                    Monto *
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">₡</span>
                                    <input asp-for="Movimiento.MontoOriginal" type="number" class="form-control" placeholder="0.00" min="0" />
                                </div>
                                <span asp-validation-for="Movimiento.MontoOriginal" class="text-danger"></span>
                            </div>

                            <!-- Estado -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="fas fa-toggle-on"></i>
                                    Estado
                                </label>
                                <div class="form-check form-switch">
                                    <input asp-for="Movimiento.Estado" class="form-check-input" type="checkbox" />
                                    <label asp-for="Movimiento.Estado" class="form-check-label">
                                        Movimiento activo
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <a href="/Cuentas/Index" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left"></i>
                                        Cancelar
                                    </a>
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-save"></i>
                                        Guardar Movimiento
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Inicializar fecha actual al cargar la página
        document.addEventListener('DOMContentLoaded', function() {
            const fechaInput = document.querySelector('input[name="Movimiento.Fecha"]');
            if (fechaInput && !fechaInput.value) {
                const now = new Date();
                const year = now.getFullYear();
                const month = String(now.getMonth() + 1).padStart(2, '0');
                const day = String(now.getDate()).padStart(2, '0');
                const hours = String(now.getHours()).padStart(2, '0');
                const minutes = String(now.getMinutes()).padStart(2, '0');

                fechaInput.value = `${year}-${month}-${day}T${hours}:${minutes}`;
            }
        });
    </script>

    <style>
        .card-header {
            border-bottom: 1px solid rgba(0,0,0,.125);
        }

        .form-label {
            font-weight: 600;
        }

        .form-control:focus, .form-select:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .btn {
            padding: 0.5rem 1.5rem;
        }

        .input-group-text {
            font-weight: bold;
        }

        .alert {
            border-radius: 0.375rem;
        }
    </style>
}