@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard - Sistema de Gestión Financiera";
}

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="jumbotron bg-primary text-white rounded p-4">
                <div class="text-center">
                    <h1 class="display-4">
                        <i class="fas fa-chart-line"></i>
                        Sistema de Gestión Financiera
                    </h1>
                    <p class="lead">Controla tus finanzas de manera eficiente y organizada</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Cuentas Activas
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">5</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-wallet fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Movimientos del Mes
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">24</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exchange-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Categorías
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">8</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tags fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Tipos de Pago
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">6</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-credit-card fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-bolt"></i>
                        Acciones Rápidas
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a href="/Cuentas/Index" class="btn btn-primary btn-lg btn-block">
                                <i class="fas fa-wallet mb-2"></i><br>
                                Gestionar Cuentas
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a href="/Movimiento/Index" class="btn btn-success btn-lg btn-block">
                                <i class="fas fa-exchange-alt mb-2"></i><br>
                                Ver Movimientos
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a href="/Categoria/Index" class="btn btn-info btn-lg btn-block">
                                <i class="fas fa-tags mb-2"></i><br>
                                Categorías
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a href="/TipoPago/Index" class="btn btn-warning btn-lg btn-block">
                                <i class="fas fa-credit-card mb-2"></i><br>
                                Tipos de Pago
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity and Quick Access -->
    <div class="row">
        <!-- Recent Activity -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-clock"></i>
                        Actividad Reciente
                    </h6>
                    <a href="/Movimiento/Index" class="btn btn-sm btn-outline-primary">Ver Todo</a>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Compra en Supermercado</h6>
                                <p class="mb-1 text-muted">Cuenta Principal - Categoría: Alimentación</p>
                                <small class="text-muted">Hace 2 horas</small>
                            </div>
                            <span class="badge bg-danger rounded-pill">-₡25,000.00</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Depósito Salario</h6>
                                <p class="mb-1 text-muted">Cuenta Ahorros - Categoría: Ingresos</p>
                                <small class="text-muted">Ayer</small>
                            </div>
                            <span class="badge bg-success rounded-pill">+₡850,000.00</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Pago de Servicios</h6>
                                <p class="mb-1 text-muted">Cuenta Corriente - Categoría: Servicios</p>
                                <small class="text-muted">Hace 2 días</small>
                            </div>
                            <span class="badge bg-warning rounded-pill">-₡45,500.00</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Tools -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-tools"></i>
                        Herramientas Rápidas
                    </h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="/Movimiento/Create" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus text-success"></i>
                            Nuevo Movimiento
                        </a>
                        <a href="/Cuentas/Create" class="list-group-item list-group-item-action">
                            <i class="fas fa-wallet text-primary"></i>
                            Nueva Cuenta
                        </a>
                        <a href="/Categoria/Create" class="list-group-item list-group-item-action">
                            <i class="fas fa-tag text-info"></i>
                            Nueva Categoría
                        </a>
                        <a href="/TipoPago/Create" class="list-group-item list-group-item-action">
                            <i class="fas fa-credit-card text-warning"></i>
                            Nuevo Tipo de Pago
                        </a>
                    </div>
                </div>
            </div>

            <!-- Balance Summary -->
            <div class="card shadow mt-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-pie"></i>
                        Resumen de Balances
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Total en CRC:</span>
                            <strong class="text-success">₡1,245,750.00</strong>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Total en USD:</span>
                            <strong class="text-info">$2,450.00</strong>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Total en EUR:</span>
                            <strong class="text-warning">€150.00</strong>
                        </div>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span><strong>Patrimonio Total:</strong></span>
                        <strong class="text-primary">₡2,890,125.00</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .border-left-primary {
            border-left: 0.25rem solid #4e73df !important;
        }
        .border-left-success {
            border-left: 0.25rem solid #1cc88a !important;
        }
        .border-left-info {
            border-left: 0.25rem solid #36b9cc !important;
        }
        .border-left-warning {
            border-left: 0.25rem solid #f6c23e !important;
        }
        .jumbotron {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-2px);
        }
        .btn-block {
            display: block;
            width: 100%;
        }
    </style>
}

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        // Animación simple para las tarjetas
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
}